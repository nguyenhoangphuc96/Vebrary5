<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorWhite"
        android:weightSum="100"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="30"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/detail_textview_paddingleft">
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tên"
                    android:textAppearance="@style/TextTitleDetailBlue"
                    android:gravity="center|start"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="100"
                android:paddingLeft="@dimen/detail_textview_paddingleft"
                android:layout_weight="70"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="37"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            xmlns:cardview="http://schemas.android.com/apk/res-auto"
                            cardview:cardCornerRadius="@dimen/cardview_corner_radius"

                            cardview:cardBackgroundColor="@color/colorBackgroundToolbarGray">
                            <ImageView
                                android:id="@+id/imvDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter" />
                        </android.support.v7.widget.CardView>
                        <ProgressBar
                            android:id="@+id/pbImageDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:elevation="2dp"
                            android:visibility="visible"
                            android:indeterminateTint="@color/colorBlueLight"
                            android:indeterminateTintMode="src_in"/>
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="30"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/detail_textview_paddingleft">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tác giả: "
                        android:textAppearance="@style/TextListInfoDetailGray"/>
                    <TextView
                        android:paddingVertical="@dimen/paddingverhicle_border_button_bluelight"
                        android:background="@drawable/border_text_detail_gray"
                        android:id="@+id/tvAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Updating.."
                        android:textAppearance="@style/TextListInfoDetailBlack"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/detail_textview_paddingleft">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhà xuất bản: "
                        android:textAppearance="@style/TextListInfoDetailGray"/>
                    <TextView
                        android:paddingVertical="@dimen/paddingverhicle_border_button_bluelight"
                        android:background="@drawable/border_text_detail_gray"
                        android:id="@+id/tvPublisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Updating.."
                        android:textAppearance="@style/TextListInfoDetailBlack"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/detail_textview_paddingleft">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lần xuất bản: "
                        android:textAppearance="@style/TextListInfoDetailGray"/>
                    <TextView
                        android:id="@+id/tvEdition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Updating.."
                        android:textAppearance="@style/TextListInfoDetailBlack"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/detail_textview_paddingleft">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chủ đề: "
                        android:textAppearance="@style/TextListInfoDetailGray"/>
                    <TextView
                        android:paddingVertical="@dimen/paddingverhicle_border_button_bluelight"
                        android:background="@drawable/border_text_detail_gray"
                        android:id="@+id/tvTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Updating.."
                        android:textAppearance="@style/TextListInfoDetailBlack"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_weight="28"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="20"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/margin_login_top">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tvLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:textAppearance="@style/TextCountDetailGray"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yêu thích"
                    android:textAppearance="@style/TextCountSmallSizeDetailGray"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="20"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/margin_login_top">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tvCirculateCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125"
                    android:textAppearance="@style/TextCountDetailGray"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu thông"
                    android:textAppearance="@style/TextCountSmallSizeDetailGray"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_weight="20"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_login_top">
                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/tvTotalCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textAppearance="@style/TextCountDetailGray"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng số"
                        android:textAppearance="@style/TextCountSmallSizeDetailGray"/>

                </LinearLayout>
                <com.lacviet.vebrary5.Detail.CircularCompletionView
                    android:layout_centerInParent="true"
                    android:id="@+id/circularView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_weight="20"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/margin_login_top">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tvBorrowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05"
                    android:textAppearance="@style/TextCountDetailGray"
                    android:textColor="@color/colorRed"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang mượn"
                    android:textAppearance="@style/TextCountSmallSizeDetailGray"
                    android:textColor="@color/colorRed"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="20"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/margin_login_top">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tvAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07"
                    android:textAppearance="@style/TextCountDetailGray"
                    android:textColor="@color/colorBackgroundToolbarBlue"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiện có"
                    android:textAppearance="@style/TextCountSmallSizeDetailGray"
                    android:textColor="@color/colorBackgroundToolbarBlue"/>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_weight="22"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/detail_textview_paddingleft">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tóm tắt: "
                            android:textAppearance="@style/TextListInfoDetailGray"/>
                        <TextView
                            android:id="@+id/tvSumary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Updating.."
                            android:textAppearance="@style/TextListInfoDetailBlack"/>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:id="@+id/loSame"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                >
                <TextView
                    android:textAllCaps="true"
                    android:id="@+id/tvSame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sách tương tự "
                    android:textAppearance="@style/TextTitleButtonBlue"
                    android:background="@drawable/border_button_bluelight"
                    android:gravity="center"/>

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>